<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1900" d:DesignHeight="980"
		x:CompileBindings="False"
        x:Class="GOST_Control.Settings"
        Title="Настройки">
	<Border BorderThickness="2"
			BorderBrush="Aqua">
		<Grid ShowGridLines="True"
			  ColumnDefinitions="*,*,*"
			  RowDefinitions="*,7*,*"
			  Name="GostControl_Settings">

			<DockPanel Grid.Column="2"
					   Grid.Row="0"
					   VerticalAlignment="Top"
					   HorizontalAlignment="Right">

				<Button Name="Save"
						Click="Button_Click_Save"
						CornerRadius="10"
						BorderThickness="2"
						BorderBrush="Aqua"
						Background="Wheat"
						Height="33">
					<TextBlock Text="Сохранить"
							   FontWeight="Bold"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"/>
				</Button>

				<Button Name="Logout"
						Click="Button_Click_Logout"
						CornerRadius="10"
						BorderThickness="2"
						BorderBrush="Aqua"
						Background="Wheat"
						Height="33"
						Margin="10">
					<TextBlock Text="Выйти"
							   FontWeight="Bold"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"/>
				</Button>
			</DockPanel>

			<DockPanel Margin="0 10 0 0"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"
					   Grid.Column="1"
					   Grid.Row="0">

				<TextBlock Text="Наименование ГОСТа:"
						   HorizontalAlignment="Left"
						   VerticalAlignment="Center"
						   FontWeight="Bold"
						   FontSize="16"/>

				<TextBox Text="{Binding Name}"
						 Margin="10 0 0 0"
						 CornerRadius="10"
						 Width="250"
						 HorizontalAlignment="Right"
						 VerticalAlignment="Center"/>

			</DockPanel>

			<Border Grid.Column="1"
					Grid.Row="1"
					CornerRadius="20"
					BorderThickness="2"
					BorderBrush="Aqua">

				<StackPanel Margin="10"
							HorizontalAlignment="Center"
							VerticalAlignment="Top">

					<DockPanel Margin="0 10 0 0">

						<TextBlock Text="Наименование шрифта:"
								   HorizontalAlignment="Left"
								   VerticalAlignment="Center"/>

						<ComboBox Name="ComboBox_FontName"
								  Width="200"
								  CornerRadius="10"
								  Margin="10 0 0 0"
								  HorizontalAlignment="Right"
								  VerticalAlignment="Center">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding FontName}"/>
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
						
					</DockPanel>

					<DockPanel Margin="0 10 0 0">

						<TextBlock Text="Размер шрифта:"
								   HorizontalAlignment="Left"
								   VerticalAlignment="Center"/>

						<ComboBox Name="ComboBox_FontSize"
								  Width="200"
								  CornerRadius="10"
								  Margin="10 0 0 0"
								  HorizontalAlignment="Right"
								  VerticalAlignment="Center">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding FontSize}"/>
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
		

					</DockPanel>


				</StackPanel>
			</Border>
		</Grid>
	</Border>
</Window>
