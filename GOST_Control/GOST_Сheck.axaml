<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"  d:DesignWidth="1920" d:DesignHeight="1080"
		x:CompileBindings="False"
        x:Class="GOST_Control.GOST_Сheck"
        Title="Проверка на ГОСТ">
	
	<Border BorderThickness="2"
			BorderBrush="Aqua">
		
		<Grid Name="GostControl_Сheck_Okko"
			  ColumnDefinitions="*,*,*"
			  RowDefinitions="*,*,*"
			  ShowGridLines="True">

			<StackPanel Grid.ColumnSpan="3"
						Grid.Row="0"
						HorizontalAlignment="Left"
						VerticalAlignment="Center">

					<TextBlock Name="GostControl"
							   Text="Проверка соответствия ГОСТ"
							   FontWeight="Bold"
							   FontSize="30"/>

					<TextBlock Name="GostName"
							   Text="ГОСТ"
							   FontWeight="Bold"
							   FontSize="30"/>

					<!-- Проверка есть ли ГОСТ в базе данных -->
					<TextBlock Name="ErrorControlGost"
							   Margin="0 5 0 0"
							   Text="1---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<!-- Проверка Удалось ли открыть документ -->
					<TextBlock Name="ErrorControl"
							   Margin="0 5 0 0"
							   Text="2---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<!-- Проверка на соответствие шрифта -->
					<TextBlock Name="ErrorControlFont"
							   Margin="0 5 0 0"
							   Text="3---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<!-- Проверка на соответствие размера шрифта -->
					<TextBlock Name="ErrorControlFontSize"
							   Margin="0 5 0 0"
							   Text="4---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<!-- Проверка на Поля документа -->
					<TextBlock Name="ErrorControlMargins"
							   Margin="0 5 0 0"
							   Text="5---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="6-!-"
							   Name="ErrorControlViravnivanie"
							   FontWeight="Bold"
							   FontSize="18"/>
					<TextBlock Margin="0 5 0 0"
							   Name="ErrorControlMnochitel"
							   Text="7---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Name="ErrorControlFirstLineIndent"
							   Margin="0 5 0 0"
							   Text="8---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Name="ErrorControlNumberPage"
							   Margin="0 5 0 0"
							   Text="9---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="10---Заголовки"
							   FontWeight="Bold"
							   FontSize="20"/>

					<TextBlock Margin="0 5 0 0"
							   Name="ErrorControlSections"
							   Text="11---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Name="ErrorControlPaperSize"
							   Margin="0 5 0 0"
							   Text="12.Формат бумаги: не проверено"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Name="ErrorControlOrientation"
							   Margin="0 5 0 0"
							   Text="13.Ориентация: не проверено"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="Оглавление"
							   Name="ErrorControlTOC"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Name="ErrorControlBulletedLists"
							   Text="16-Проверка маркированного списка-"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Name="ErrorControlNumberedList"
							   Text="17-Проверка нумерованного списка-"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Name="ErrorControlMultilevelList"
							   Text="18-Проверка многоуровневого списка-"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="19---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="20---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="21---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="22---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="23---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="24---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="25---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="26---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="27---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="28---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="29---"
							   FontWeight="Bold"
							   FontSize="18"/>

					<TextBlock Margin="0 5 0 0"
							   Text="30---"
							   FontWeight="Bold"
							   FontSize="18"/>
					<TextBlock Margin="0 5 0 0"
							   Text="---"
							   FontWeight="Bold"
							   FontSize="18"/>


			</StackPanel>

			<TextBlock Grid.ColumnSpan="3"
					   Grid.Row="1"
					   Name="FilePathTextBlock"
					   Text="Путь к выбранному файлу"
					   FontWeight="Bold"
					   FontSize="14"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"
					   Foreground="Black"/>

			<Button Name="SelectFile"
					Click="Button_Click_SelectFile"
					CornerRadius="10"
					BorderThickness="2"
					Height="33"
					VerticalAlignment="Bottom"
					HorizontalAlignment="Center"
					Grid.Column="1"
					Grid.Row="1">
				<TextBlock Text="Проверить на ГОСТ"
						   FontWeight="Bold"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"/>
			</Button>

			<Button Name="LogOut"
					Click="Button_Click_LogOut"
					CornerRadius="10"
					BorderThickness="2"
					Height="33"
					Margin="10"
					VerticalAlignment="Top"
					HorizontalAlignment="Right"
					Grid.Column="2"
					Grid.Row="0">
				<TextBlock Text="Закрыть"
						   FontWeight="Bold"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"/>
			</Button>

		</Grid>
	</Border>
</Window>
